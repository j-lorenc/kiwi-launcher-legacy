{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "importsNotUsedAsValues": "preserve",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true
  },
  "include": ["./src/main/**/*.ts", "./src/preload/**/*.ts", "./src/renderer/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "config/**/*.ts"]
}
