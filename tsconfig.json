{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["DOM", "ES2020"],
    "jsx": "react",
    "importsNotUsedAsValues": "preserve",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true,
    "sourceMap": true
  },
  "include": [
    "./src/main/**/*.ts",
    "./src/preload/**/*.ts",
    "./src/renderer/**/*.ts",
    "src/index.d.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts", "config/**/*.ts"]
}
